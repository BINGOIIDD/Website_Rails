<div class="sign_in_form">

  <h1>Регистрация</h1>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
        <%= f.label :name, "Введите ваше имя"%><br />
        <%= f.text_field :name, autofocus: true, autocomplete: "name"%>
    </div>

    <div class="field">
      <%= f.label :email, "Введите Email"%><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field">
      <%= f.label :password, "Введите пароль"%>
      <% if @minimum_password_length %>
      <em>(минимум <%= @minimum_password_length %> символов)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, "Повторите пароль"%><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div></br>

    <%= f.hidden_field :role_id, value: 3%>

    <%= f.submit "Зарегистрироваться", class: "btnForm" %>
  <% end %></br>

  <%= render "devise/shared/links" %>

</div>