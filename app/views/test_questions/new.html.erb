<div class="test_show">

    <h1><%= @test.test_name %></h1>
    
    <% answers_array = ["answer1", "answer2", "answer3", "answer4"]%>

    <%= form_with(model: @newquestion) do |form|%>
        <ul class="ul_list_questions_new">
            <% @old_questions.each do |old|%>
                <li>
                    <br/>
                    <label><%= old.question%></label><br/>
                    <br/>

                    <div class="answers_list">
                        <div class="answer_list_div">
                            <label><%= old.answers_list_1 %></label> 
                        </div></br>

                        <div class="answer_list_div">
                            <label><%= old.answers_list_2 %></label> 
                        </div></br>

                        <div class="answer_list_div">
                            <label><%= old.answers_list_3 %></label> 
                        </div></br>

                        <div class="answer_list_div">
                            <label><%= old.answers_list_4 %></label> 
                        </div></br>
                    </div>
                </li>
            <% end %>
            <li>
                <br/>
                <%= form.label "Введите вопрос: "%></br></br>
                <%= form.text_field :question, class: "create_question_input" %><br/>
                <br/>

                <div class="answers_list">
                    <div class="answer_div">
                        <%= form.radio_button :answer, 1%>
                        <%= form.text_field :answers_list_1, class: "answer_text"%>
                    </div></br>

                    <div class="answer_div">
                        <%= form.radio_button :answer, 2%>
                        <%= form.text_field :answers_list_2, class: "answer_text"%>
                    </div></br>

                    <div class="answer_div">
                        <%= form.radio_button :answer, 3%>
                        <%= form.text_field :answers_list_3, class: "answer_text"%>
                    </div></br>

                    <div class="answer_div">
                        <%= form.radio_button :answer, 4%>
                        <%= form.text_field :answers_list_4, class: "answer_text"%>
                    </div></br>
                </div>

                <%= form.hidden_field :test_list_id, value: @test.id%>

                <% @newquestion.errors.full_messages_for(:answer).each do |message| %>
                    <%= form.label :message, message%>
                <% end %>

                <%= form.submit "Создать", class: "btnForm"%>
                </br></br>

            </li>
            <% (10 - (@old_questions.count + 1)).times do %>
                <li style="background-color: #c8c8c8;">
                    
                </li>
            <% end %>

        </ul>

        
    <% end %>

</div>
